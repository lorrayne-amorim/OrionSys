<AnchorPane prefHeight="400.0" prefWidth="680.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CadastroCategoriaDialogController">

    <children>
        <Label layoutX="254.0" layoutY="36.0" text="Cadastro de Categoria">
            <font><Font name="System Bold" size="16.0" /></font>
        </Label>

        <Label layoutX="80.0" layoutY="122.0" text="Nome:" />
        <TextField fx:id="txtNome" layoutX="151.0" layoutY="118.0" prefHeight="25.0" prefWidth="422.0" />

        <Label layoutX="80.0" layoutY="162.0" text="Tipo:" />
        <ComboBox fx:id="comboTipo" layoutX="151.0" layoutY="158.0" prefHeight="25.0" prefWidth="422.0" />

        <Label layoutX="80.0" layoutY="202.0" text="Descrição:" />
        <TextField fx:id="txtDescricao" layoutX="151.0" layoutY="198.0" prefHeight="25.0" prefWidth="422.0" />

        <Label layoutX="80.0" layoutY="242.0" text="Prioridade:" />
        <ComboBox fx:id="comboPrioridade" layoutX="151.0" layoutY="238.0" prefHeight="25.0" prefWidth="422.0" />

        <CheckBox fx:id="checkRecorrente" layoutX="151.0" layoutY="274.0" text="Recorrente" />

        <Button layoutX="429.0" layoutY="310.0" onAction="#handleConfirmar" text="Confirmar" />
        <Button layoutX="511.0" layoutY="310.0" onAction="#handleCancelar" text="Cancelar" />
    </children>
</AnchorPane>
