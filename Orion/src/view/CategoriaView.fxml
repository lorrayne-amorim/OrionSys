        <Label layoutX="26.0" layoutY="51.0" text="Nome:" />
        <TextField fx:id="txtNome" layoutX="83.0" layoutY="47.0" prefHeight="25.0" prefWidth="472.0" />

        <Label layoutX="31.0" layoutY="87.0" text="Tipo:" />
        <ComboBox fx:id="comboTipo" layoutX="83.0" layoutY="83.0" prefHeight="25.0" prefWidth="472.0" />

        <Label layoutX="17.0" layoutY="124.0" text="Descrição:" />
