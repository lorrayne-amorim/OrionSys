        <CheckBox fx:id="checkAtivo" layoutX="17.0" layoutY="167.0" text="Ativo" />

        <Button layoutX="428.0" layoutY="392.0" onAction="#salvarCategoria" text="Salvar" />
        <Button layoutX="486.0" layoutY="392.0" onAction="#removerCategoria" text="Remover" />
    
        <TableView fx:id="tabelaCategoria" layoutX="14.0" layoutY="200.0" prefHeight="179.0" prefWidth="544.0">
