<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" 
    xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
    fx:controller="controller.CadastroOrcamentoDialogController">
   <children>
      <Label layoutX="231.0" layoutY="34.0" prefHeight="27.0" prefWidth="139.0" text="Orçamento">
         <font><Font name="System Bold" size="18.0" /></font>
      </Label>
      
      <Label layoutX="35.0" layoutY="80.0" text="Título:" />
      <TextField fx:id="txtTitulo" layoutX="165.0" layoutY="76.0" prefHeight="25.0" prefWidth="337.0" />

      <Label layoutX="35.0" layoutY="118.0" text="Selecione a categoria:" />
      <ComboBox fx:id="comboCategoria" layoutX="166.0" layoutY="115.0" prefHeight="25.0" prefWidth="337.0" />

      <Label layoutX="35.0" layoutY="159.0" prefHeight="17.0" prefWidth="123.0" text="Valor Limite de Gasto:" />
      <TextField fx:id="txtValorLimite" layoutX="167.0" layoutY="156.0" prefHeight="25.0" prefWidth="214.0" />

      <Label layoutX="56.0" layoutY="197.0" prefHeight="17.0" prefWidth="96.0" text="Período da Meta:" />
      <Label layoutX="166.0" layoutY="195.0" prefHeight="17.0" text="Início">
         <font><Font name="System Bold" size="12.0" /></font>
      </Label>
      <DatePicker fx:id="dataInicio" layoutX="166.0" layoutY="215.0" prefHeight="25.0" prefWidth="150.0" />

      <Label layoutX="344.0" layoutY="196.0" prefHeight="17.0" text="Fim">
         <font><Font name="System Bold" size="12.0" /></font>
      </Label>
      <DatePicker fx:id="dataFim" layoutX="343.0" layoutY="215.0" prefHeight="25.0" prefWidth="158.0" />

      <Button layoutX="372.0" layoutY="299.0" mnemonicParsing="false" text="Salvar" onAction="#handleConfirmar"/>
      <Button layoutX="431.0" layoutY="299.0" mnemonicParsing="false" text="Cancelar" onAction="#handleCancelar"/>
      
   </children>
</AnchorPane>
