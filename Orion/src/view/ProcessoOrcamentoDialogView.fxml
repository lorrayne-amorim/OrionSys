<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootPane" prefHeight="350.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, #a5d6a7, #388e3c); -fx-padding: 0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProcessoOrcamentoDialogController">

    <children>
        <!-- HEADER -->
        <Rectangle fill="#1b5e20" height="60" layoutX="0" layoutY="0" width="600" />
        <Text layoutX="254.0" layoutY="37.0" style="-fx-fill: white; -fx-font-size: 18px; -fx-font-family: 'Segoe UI Semibold';" text="Orçamento" />

        <!-- Título -->
        <HBox alignment="CENTER_LEFT" layoutX="20" layoutY="80" spacing="10">
            <Label style="-fx-min-width: 130;" text="Título:" textFill="WHITE">
            <font>
               <Font name="System Bold" size="14.0" />
            </font></Label>
            <TextField fx:id="txtTitulo" prefWidth="350" style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-padding: 4;" />
        </HBox>

        <!-- Categoria -->
        <HBox alignment="CENTER_LEFT" layoutX="20" layoutY="120" spacing="10">
            <Label style="-fx-min-width: 130;" text="Categoria:" textFill="WHITE">
            <font>
               <Font name="System Bold" size="14.0" />
            </font></Label>
            <ComboBox fx:id="comboCategoria" prefWidth="350" style="-fx-background-radius: 4; -fx-border-radius: 4;" />
        </HBox>

        <!-- Valor Limite -->
        <HBox alignment="CENTER_LEFT" layoutX="20" layoutY="160" spacing="10">
            <Label style="-fx-min-width: 130;" text="Valor Limite:" textFill="WHITE">
            <font>
               <Font name="System Bold" size="14.0" />
            </font></Label>
            <TextField fx:id="txtValorLimite" prefWidth="200" style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-padding: 4;" />
        </HBox>

        <!-- Período Início -->
        <HBox alignment="CENTER_LEFT" layoutX="20" layoutY="200" spacing="10">
            <Label style="-fx-min-width: 130;" text="Início:" textFill="WHITE">
            <font>
               <Font name="System Bold" size="14.0" />
            </font></Label>
            <DatePicker fx:id="dataInicio" prefWidth="200" style="-fx-background-radius: 4; -fx-border-radius: 4;" />
        </HBox>

        <!-- Período Fim -->
        <HBox alignment="CENTER_LEFT" layoutX="20" layoutY="240" spacing="10">
            <Label style="-fx-min-width: 130;" text="Fim:" textFill="WHITE">
            <font>
               <Font name="System Bold" size="14.0" />
            </font></Label>
            <DatePicker fx:id="dataFim" prefWidth="200" style="-fx-background-radius: 4; -fx-border-radius: 4;" />
        </HBox>

        <!-- Ações -->
        <HBox alignment="CENTER_RIGHT" layoutX="360" layoutY="340" spacing="10" />
         <Button layoutX="430.0" layoutY="288.0" onAction="#handleCancelar" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 2; -fx-text-fill: white; -fx-background-radius: 4; -fx-pref-width: 80px; -fx-pref-height: 30px;" text="Cancelar" />
         <Button layoutX="339.0" layoutY="288.0" onAction="#handleConfirmar" style="-fx-background-color: #1b5e20; -fx-text-fill: white; -fx-background-radius: 4; -fx-pref-width: 80px; -fx-pref-height: 30px;" text="Salvar" />
    </children>
</AnchorPane>
