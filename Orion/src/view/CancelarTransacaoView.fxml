<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CancelarTransacaoController">
    <VBox spacing="15" padding="20">

        <Label text="Cancelar Transação" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <TableView fx:id="tabelaTransacoes" prefHeight="300">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colValor" text="Valor" prefWidth="100"/>
                <TableColumn fx:id="colData" text="Data" prefWidth="150"/>
                <TableColumn fx:id="colCategoria" text="Categoria ID" prefWidth="100"/>
                <TableColumn fx:id="colLocal" text="Local ID" prefWidth="100"/>
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancelar Transação" onAction="#cancelarTransacao" />
            <Button text="Fechar" onAction="#fecharJanela" />
        </HBox>

    </VBox>
</AnchorPane>
