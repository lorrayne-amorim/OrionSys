<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="controller.GraficoPizzaDespesasController">
    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Data Início:" />
        <DatePicker fx:id="dataInicio" layoutX="110.0" layoutY="17.0" />

        <Label layoutX="300.0" layoutY="20.0" text="Data Fim:" />
        <DatePicker fx:id="dataFim" layoutX="370.0" layoutY="17.0" />

        <Button fx:id="btnGerar" layoutX="600.0" layoutY="17.0"
                onAction="#handleGerarGrafico" text="Gerar Gráfico" />

        <PieChart fx:id="pieChart" layoutX="50" layoutY="60"
                  prefWidth="800" prefHeight="500" />
    </children>
</AnchorPane>
